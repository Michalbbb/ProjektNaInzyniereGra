<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Test" Height="600" Width="1200"
     
        WindowStartupLocation="CenterScreen"
        Foreground="#FFFFFF">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/PrzykladoweTlo.png" />
        </Grid.Background>
        <Canvas x:Name="GameScreen" Focusable="true" KeyUp="KeyboardUp" KeyDown="KeyboardDown">
            <Rectangle Canvas.Left="276" Canvas.Top="170" Fill="Black" Width="108" Height="122" x:Name="Player"></Rectangle>
            <Rectangle Canvas.Left="708" Canvas.Top="308" Fill="Transparent" Width="180" Height="30" Tag="collision" HorizontalAlignment="Left" VerticalAlignment="Center"></Rectangle>

            <TextBox x:Name="Write"  Width="200" Height="40" Background="Transparent" Foreground="White" Canvas.Left="1000" Canvas.Top="0"></TextBox>

        </Canvas>
    </Grid>
</Window>
